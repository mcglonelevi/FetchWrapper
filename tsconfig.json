{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "es2017", "es2018", "dom", "DOM.Iterable"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "build",
    "webpack",
    "jest",
    "setup-tests.ts",
    "jest.config.js"
  ]
}